<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/width_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/width_inch" />

    <TextView
        android:id="@+id/width_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="numbers"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/length_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/length_inch"
        android:layout_below="@id/width_textView"/>

    <TextView
        android:id="@+id/length_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="numbers"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/width_numbers"/>

    <TextView
        android:id="@+id/yard_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yard"
        android:layout_below="@id/length_textView" />

    <TextView
        android:id="@+id/yard_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/length_numbers"
        android:text="numbers"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/width_cm_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/width_cm"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/width_cm_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="numbers"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/length_cm_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/width_cm_textview"
        android:text="@string/length_cm"/>

    <TextView
        android:id="@+id/length_cm_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/width_cm_numbers"
        android:text="numbers"/>

    <TextView
        android:id="@+id/m_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/length_cm_textview"
        android:text="@string/m"/>

    <TextView
        android:id="@+id/m_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/length_cm_numbers"
        android:layout_alignParentEnd="true"
        android:text="numbers"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/m_numbers"
        android:text="@string/recalc"
        android:id="@+id/recalculate_bt"/>

</RelativeLayout>